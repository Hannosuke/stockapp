<h1 class="mt-2">編集</h1>
<%= link_to("一覧に戻る", "/")%>
<%= form_with(model: @product, local: true) do |f| %>
  <%= f.label :カテゴリー%><br>
  <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true%><br>
  <%= f.label :メーカー%><br>
  <%= f.collection_select :maker_id, Maker.all, :id, :name %><br>
  <%= f.label :商品コード%>
  <%= f.text_field :product_code, class: "form-control" %>
  <%= f.label :商品名%>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :単価%>
  <%= f.fields_for :price do |p|%>
    <%= p.text_field :price, class:"form-control"%>
  <% end %>
  <%= f.label :在庫数%>
  <%= f.fields_for :stock do |s|%>
    <%= s.text_field :stock, class:"form-control"%>
  <% end %>
  <%= f.submit "変更を確定", class: "mt-2 btn btn-primary"%>
<% end %>
