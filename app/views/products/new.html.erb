<h1>商品情報登録</h1>
<%= link_to("一覧に戻る", "/", class:"d-flex justify-content-end")%>
<%= form_with(model: @product, local: true) do |f| %>
  <%= f.label :メーカー%>
  <%= f.select :name, [["Apple", "Apple"], ["SHARP", "SHARP"], ["三菱", "三菱"]], include_blank: "選択してください"%>
  <%= f.label :商品コード%>
  <%= f.text_field :product_code, class: "form-control" %>
  <%= f.label :商品名%>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.submit "登録", class: "mt-2 btn btn-primary"%>
<% end %>
